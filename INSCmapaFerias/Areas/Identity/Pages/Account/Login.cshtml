@page
@model LoginModel

@{
    ViewData["Title"] = "Entre na sua conta";
}

<div class="container">
    <div class="row">

        <div class="col">

            <section class="card">

                <form id="account" method="post" class="formLogin">

                    <h2>@ViewData["Title"]</h2>

                    <hr />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating espacoInputs">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>

                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn botaoEntrarConta">Entrar</button>
                    </div>

                    <div>
                        <p>Ainda não criaste uma conta? 
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Clique aqui para criar uma</a>
                        </p>
                    </div>

                </form>

            </section>

        </div>
    
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
