@page
@model RegisterModel
@{
    ViewData["Title"] = "Criar uma nova conta";
}

<div class="container">
    <div class="row">

        <div class="col">

            <section class="card">

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" class="formRegister" method="post">
                        <h2>@ViewData["Title"]</h2>

                        <hr />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-floating">
                            <input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" aria-required="true" />
                            <label class="text-dark" asp-for="Input.FirstName"></label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-floating espacoInputs">
                            <input asp-for="Input.LastName" class="form-control" autocomplete="lastname" aria-required="true" />
                            <label class="text-dark" asp-for="Input.LastName"></label>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>

                        <div class="form-floating espacoInputs">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <label class="text-dark" asp-for="Input.Email"></label>
                            <span asp-validation-for="Input.Email" data-valmsg-replace="true" class="text-danger"></span>
                        </div>

                        <div class="form-floating espacoInputs">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                            <label class="text-dark" asp-for="Input.Password"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating espacoInputs">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                            <label class="text-dark" asp-for="Input.ConfirmPassword"></label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="espacoInputs">
                            <button id="registerSubmit" type="submit" class="w-100 btn botaoRegistar">Registar</button>
                        </div>

                        <div>
                            <p>Já tens uma conta ? 
                                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Clique aqui para entrar!</a>
                            </p>
                        </div>

                    </form>

                </section>

        </div>
    
    </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
