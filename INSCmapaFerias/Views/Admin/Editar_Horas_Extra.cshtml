@model  INSCmapaFerias.Areas.Identity.Data.Overtime;

@{
    ViewData["Title"] = "Editar Horas Extra";
}

<div class="container">

    <div class="row">

        <div class="col card">

            <form asp-action="Editar_Horas_Extra" class="formAddEvent">

                <h3>@ViewData["Title"]</h3>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">

                    <label asp-for="OvertimeId" class="control-label" hidden></label>
                    <input asp-for="OvertimeId" class="form-control" readonly hidden/>
                    <span asp-validation-for="OvertimeId" class="text-danger" hidden></span>

                    <label asp-for="OvertimeName" class="control-label espacoInputs"></label>
                    <input asp-for="OvertimeName" class="form-control" />
                    <span asp-validation-for="OvertimeName" class="text-danger"></span>

                    <label asp-for="OvertimeStart" class="control-label espacoInputs"></label>
                    <input asp-for="OvertimeStart" class="form-control" />
                    <span asp-validation-for="OvertimeStart" class="text-danger"></span>

                    <label asp-for="OvertimeEnd" class="control-label espacoInputs"></label>
                    <input asp-for="OvertimeEnd" class="form-control"/>
                    <span asp-validation-for="OvertimeEnd" class="text-danger"></span>

                    <label asp-for="Hours" class="control-label espacoInputs"></label>
                    <input asp-for="Hours" type="time" class="form-control"/>
                    <span asp-validation-for="Hours" class="text-danger"></span>

                    <a asp-action="Gestor_De_Ferias" class="btn botaoEditarFeriasVoltarCRUD">Voltar</a>
                    <input type="submit" value="Editar" class="btn botaoEditarFeriasCRUD" />

                </div>

            </form>

        </div>

        <div class="col" style="margin-top: 40px;">

            <img src="~/img/farol.png" class="imgFarol"/>

        </div>

    </div>

</div>

@section Scripts {

<script>

    $(document).ready(function(){

    });

</script>
}<!--end scripts section-->