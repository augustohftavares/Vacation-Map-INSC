@model  INSCmapaFerias.Areas.Identity.Data.Events;

@{
    ViewData["Title"] = "Editar Férias";
}

<div class="container">

    <div class="row">

        <div class="col card">

            <form asp-action="Editar_Ferias" class="formAddEvent">

                <h3>@ViewData["Title"]</h3>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">

                    <label asp-for="event_id" class="control-label" hidden></label>
                    <input asp-for="event_id" class="form-control" readonly hidden/>
                    <span asp-validation-for="event_id" class="text-danger" hidden></span>

                    <label asp-for="Title" class="control-label espacoInputs"></label>
                    <input asp-for="Title" class="form-control" readonly/>
                    <span asp-validation-for="Title" class="text-danger"></span>

                    <label asp-for="event_start" class="control-label espacoInputs"></label>
                    <input asp-for="event_start" class="form-control" readonly/>
                    <span asp-validation-for="event_start" class="text-danger"></span>

                    <label asp-for="event_end" class="control-label espacoInputs"></label>
                    <input asp-for="event_end" class="form-control" readonly/>
                    <span asp-validation-for="event_end" class="text-danger"></span>

                    <label asp-for="Status" class="espacoInputs"></label>
                    <select asp-for="Status" name="status" id="status" class="dropdownStatus">
                        <option value="Aprovado" selected>&#9989; Aprovar</option>
                        <option value="Rejeitado">&#10060; Rejeitar</option>
                    </select>

                    <br />

                    <div class="Rejeitado options" id="Rejeitado optionsDiv" >

                        <label asp-for="Options" class="control-label espacoInputs"></label>
                        <input asp-for="Options" class="form-control" />
                        <span asp-validation-for="Options" class="text-danger"></span>

                        <label asp-for="Options_End" class="control-label espacoInputs"></label>
                        <input asp-for="Options_End" class="form-control" />
                        <span asp-validation-for="Options_End" class="text-danger"></span>

                    </div>

                    <a asp-action="Gestor_De_Ferias" class="btn botaoEditarFeriasVoltarCRUD">Voltar</a>
                    <input type="submit" value="Editar" class="btn botaoEditarFeriasCRUD" />

                </div>

            </form>

        </div>

        <div class="col" style="margin-top: 40px;">

            <img src="~/img/farol.png" class="imgFarol"/>

        </div>

    </div>

</div>

@section Scripts {

<script>

    $(document).ready(function(){

        $("select").change(function(){
            $(this).find("option:selected").each(function(){

                var optionValue = $(this).attr("value");
            
                if(optionValue){
                
                    $(".options").not("." + optionValue).hide();
                    $("." + optionValue).show();

                } else{
                    $(".options").hide();
                }
            });
        }).change();


    });

</script>
}<!--end scripts section-->